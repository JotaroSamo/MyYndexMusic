<Page
    Background="Transparent"
    Title="PlayList"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="MyYndexMusic.Pages.PlayListPage.PlayList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyYndexMusic.Pages.PlayListPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <!--  Стиль для блока плейлиста  -->
        <Style TargetType="Border" x:Key="PlaylistBlockStyle">
            <Setter Property="Background" Value="#FF383838" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Color="Black"
                        Direction="270"
                        Opacity="0.5"
                        ShadowDepth="4" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Стиль для кнопки плей  -->
        <Style TargetType="Button" x:Key="PlayButtonStyle">
            <Setter Property="Background" Value="#FF383838" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="FontSize" Value="5" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="40" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF767676" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="BackButtonStyle">
            <Setter Property="Background" Value="#FF383838" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF767676" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  Стиль для кнопки в MenuItem  -->
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FF383838" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="Margin" Value="5,0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF444444" />
                    <Setter Property="Foreground" Value="#ffea19" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Стиль для StackPanel в MenuItem  -->
        <Style TargetType="StackPanel" x:Key="MenuItemStackPanelStyle">
            <Setter Property="Background" Value="#FF383838" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

    </Page.Resources>

    <Grid>
        <!--  Основной контент  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Строка для кнопки "Назад"  -->
            <RowDefinition Height="*" />
            <!--  Строка для основного контента  -->
        </Grid.RowDefinitions>

        <!--  Кнопка назад в верхней части страницы  -->
        <Button
            Click="BackButton_Click"
            Content="Назад"
            HorizontalAlignment="Center"
            Style="{StaticResource BackButtonStyle}"
            VerticalAlignment="Center" Height="60" Width="778" />

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" Grid.Row="1">
            <ListView
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding Playlists}"
                Name="PlaylistsItemsControl"
                VerticalAlignment="Stretch">

                <!--  Панель расположения, использующая WrapPanel для автоматического размещения элементов  -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel
                            HorizontalAlignment="Stretch"
                            ItemHeight="270"
                            ItemWidth="200"
                            MaxWidth="{Binding ActualWidth, ElementName=PlaylistsItemsControl}"
                            VerticalAlignment="Stretch" />
                        <!--  Привязка ширины к фактической ширине ListView  -->
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--  Карточка плейлиста  -->
                        <Border Style="{StaticResource PlaylistBlockStyle}">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <!--  Внутренний Grid для точного контроля над позициями элементов  -->
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <!--  Определяем 3 строки для изображения, текста и кнопки  -->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150" />
                                        <!--  Для изображения  -->
                                        <RowDefinition Height="40" />
                                        <!--  Для текста  -->
                                        <RowDefinition Height="50" />
                                        <!--  Для кнопки  -->
                                    </Grid.RowDefinitions>

                                    <!--  Изображение плейлиста  -->
                                    <Image
                                        Grid.Row="0"
                                        Height="120"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,10"
                                        Source="{Binding Image}" />

                                    <!--  Название плейлиста  -->
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Grid.Row="1"
                                        Margin="0,0,0,10"
                                        Text="{Binding Title}"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap" />
                                    <!--  Автоматический перенос текста, если он не помещается  -->

                                    <!--  Кнопка запуска  -->
                                    <Button
                                        Click="ButtonBase_OnClick"
                                        Content="▶"
                                        Grid.Row="2"
                                        HorizontalAlignment="Center"
                                        MinWidth="50"
                                        Style="{StaticResource PlayButtonStyle}"
                                        Tag="{Binding Uid}" />
                                </Grid>
                            </StackPanel>


                            <!--  Контекстное меню  -->
                            <Border.ContextMenu>
                                <ContextMenu Background="#FF383838">
                                    <ContextMenu.ItemsSource>
                                        <Binding Path="Tracks" />
                                    </ContextMenu.ItemsSource>
                                    <ContextMenu.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel
                                                MaxWidth="600"
                                                Orientation="Vertical"
                                                Width="600" />
                                        </ItemsPanelTemplate>
                                    </ContextMenu.ItemsPanel>
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="MenuItem">
                                            <!--  Настройки внешнего вида для каждого MenuItem  -->
                                            <Setter Property="Background" Value="#FF565656" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="Padding" Value="10,5" />
                                            <Setter Property="FontSize" Value="14" />

                                        </Style>
                                    </ContextMenu.ItemContainerStyle>

                                    <ContextMenu.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Style="{StaticResource MenuItemStackPanelStyle}">
                                                <Image
                                                    Height="30"
                                                    Margin="0,0,10,0"
                                                    Source="{Binding Image}"
                                                    Width="30" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Style="{StaticResource TextBlockStyle}"
                                                    Text="{Binding Title}"
                                                    VerticalAlignment="Center" />
                                                <Button
                                                    Click="TrackButton_OnClick"
                                                    Content="▶"
                                                    FontSize="5"
                                                    Margin="10,0,0,0"
                                                    MinWidth="50"
                                                    Style="{StaticResource MenuButtonStyle}"
                                                    Tag="{Binding}"
                                                    Width="50" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ContextMenu.ItemTemplate>

                                </ContextMenu>
                            </Border.ContextMenu>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>

